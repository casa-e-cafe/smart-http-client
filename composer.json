{
    "name": "casaecafe/smart-http-client",
    "description": "A simple http client with some smart features",
    "type": "library",
    "authors": [
        {
            "name": "Rafael Pereira Girolineto",
            "email": "rafapg.85@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "pimple/pimple": "~v3",
        "silex/silex": "~2",
        "guzzlehttp/guzzle": "~6.2"
    },
    "autoload": {
        "psr-4": {
            "CasaCafe\\Library\\Client\\" : "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "~5.6"
    },
    "autoload-dev": {
        "psr-4": {
            "CasaCafe\\Library\\Client\\Unit\\" : "tests"
        }
    }
}
